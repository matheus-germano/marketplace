{
  "extends": "@rocketseat/eslint-config/react",
  "plugins": [
    "import-helpers"
  ],
  "rules": {
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          [
            "/^react/",
            "/^next/"
          ],
          "module",
          "/^@shared/",
          "absolute",
          "/^components/",
          "/^pages/",
          "/utils/",
          "/constants/",
          "/^store/",
          "/^styles/",
          "/^templates/",
          [
            "parent",
            "sibling",
            "index"
          ]
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ]
  }
}